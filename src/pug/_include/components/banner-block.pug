mixin banner-block(img,sub1,sub2,sub3,option,option1,option2)
    - var attributes = {};
    - attributes.src = img;
    - attributes.alt = title + ' banner';
    .banner-block.flex.center__align.relative 
        .banner__txt
            .container_child 
                h1= title
                if option != ""
                    p.pc= sub1
                    p.pc= sub2
                    p.pc= sub3
                    p.sp= option
                    p.sp= option1
                    p.sp= option2
        .img_wrap 
            img&attributes(attributes)
        .overlay